[Unit]
Description=Node.js Metadata Server
After=network-setup.service
Wants=network-setup.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/nodejs-server
ExecStart=/usr/bin/node /opt/nodejs-server/server.js
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=minimal.target