#!/bin/bash
set -euxo pipefail

# Install Node.js server files
mkdir -p "$DESTDIR/usr/lib/dummy-tdx-dcap"
install -m 755 tdx-dummy/server.js "$DESTDIR/usr/lib/dummy-tdx-dcap/server.js"
install -m 644 tdx-dummy/package.json "$DESTDIR/usr/lib/dummy-tdx-dcap/package.json"

# Create symlink for easy execution
mkdir -p "$DESTDIR/usr/bin"
ln -sf /usr/lib/dummy-tdx-dcap/server.js "$DESTDIR/usr/bin/dummy-tdx-dcap"
